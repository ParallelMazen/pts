{
  "manifest_version": 2,

  "name": "PTS-Knappen",
  "description": "Anmäl tillsynsärenden till PTS",
  "homepage_url": "https://www.dfri.se/pts-knappen",
  "icons": { "16": "favicon.ico",
           "48": "logo48.jpg",
          "128": "logo128.jpg" },
  "version": "0.4",
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Rapportera till PTS",
    "default_icon": "favicon.ico"
  }
}
